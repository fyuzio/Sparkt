    ViewBag.Title = "Star-Second-Screen";
    Layout = "~/Views/Shared/_LayoutWork.cshtml";
}
@{
    ViewBag.Title = "Sparkt Work | Star Second Screen";
    Layout = "~/Views/Shared/_LayoutWork.cshtml";
    ViewBag.MetaTitle = "Sparkt Work | Star Second Screen";
    ViewBag.MetaDescription = "Extending the content experience beyond traditional broadcast media to the consumer's mobile eco-system";
    ViewBag.MetaURL = "https://sparkt.in/work/star-plus-brand-refresh";
    ViewBag.MetaImage = "https://sparkt.in/Content/work/images/thums/star-plus-brand-refresh-thum.jpg";
}
@section BodyClass {star-plus}

<main>
    <div class="section">
        <div class="work-banner">
            <div class="banner-source">
                <div class="banner-video  middle-align" style="background-image: url('../Content/work/images/banners/second-screen-cover.jpg');">
                </div>

            </div>
            <div class="head-title floated">
                <i class="title-icon"><img src="~/Content/work/images/title-icon.png" alt="" /></i>
                <h1>Second Screen</h1>
                <div class="clear"></div>
                <span>Extending the content experience beyond traditional broadcast media to the consumer's mobile eco-system</span>
