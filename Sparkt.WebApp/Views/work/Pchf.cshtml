@{
    ViewBag.Title = "Sparkt | Piramal Capital Housing Finance";
    Layout = "~/Views/Shared/_LayoutWork.cshtml";
    ViewBag.MetaTitle = "Sparkt | Piramal Capital Housing Finance";
    ViewBag.MetaDescription = "Home Loans For a Rising India.";
    ViewBag.MetaURL = "https://sparkt.in/work/pchf";
    ViewBag.MetaImage = "https://sparkt.in/Content/work/images/thums/pchf-thum.jpg";
}
@section BodyClass {piramal}
<main>
    <div class="section">
        <div class="work-banner">
            <div class="banner-source">
                <div class="banner-video  middle-align" style="background-image: url('/Content/work/images/banners/pchf-cover.jpg');">
                </div>

            </div>
            <div class="head-title floated">
                <i class="title-icon"><img src="/Content/work/images/title-icon.png" alt="" /></i>
                <h1>Piramal Capital Housing finance</h1>
                <div class="clear"></div>
                <span>Home Loans For a Rising India.</span>
            </div>
        </div>

        @Html.Partial("_WorkMenu")
    </div>
    <div class="section">
        <div class="head-title floated ">
            <i class="title-icon"><img src="/Content/work/images/title-icon.png" alt="" /></i>
            <h2>Creative Experience</h2>
        </div>
        <div class="creative-assets-wrapp">
            <div class="assets-carousel piramal-bg ">
                <div class="slider">



                    <div>
                        <div class="creative-assets ">
                            <div class="container">
                                <div class="assets-title">
                                    <h3>
                                        Crafted a unique experience that's user-friendly, simplistic and reinforced a positive brand image.
                                    </h3>
                                </div>
                                <div class="website-operation">
                                    <figure class="figure-img"> <img src="/Content/work/images/banner-video-trans.png" alt="brickex" class="responsive-img" style="width: 100%; vertical-align: top;" /> </figure>
                                    <div class="desktop-video">


                                        <video id="desktop" style="max-width: 100%; background-image: url('/Content/work/images/pchf-desktop.jpg');" preload="none" controls="False" muted autoplay loop playsinline webkit-playsinline>
                                          <source  src="~/Content/work/media/pchf-desktop.mp4" type="video/mp4" >

                                        </video>
                                        <script>document.getElementById("desktop").controls = false;</script>
                                    </div>
                                    <div class="mobile-video">
                                        <video id="mobile" style="max-width: 100%; background-image: url('/Content/work/images/pchf-mobile.jpg');" preload="none" controls="False" muted autoplay loop playsinline webkit-playsinline>
                                            <source  src="~/Content/work/media/pchf-mobile.mp4" type="video/mp4" >

                                        </video>
                                        <script>document.getElementById("mobile").controls = false;</script>
                                    </div>

                                    <a href="https://www.pchf.in/" target="_blank" class="view-website">VIEW WEBSITE</a>

                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>
