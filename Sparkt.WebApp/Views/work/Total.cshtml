
@{
    ViewBag.Title = "Total";
    Layout = "~/Views/Shared/_LayoutWork.cshtml";

}

<main>
    <div class="section">
        <div class="work-banner">
            <div class="banner-source">
                <div class="banner-video">
                    <video class="bannerplayer" poster="~/Content/work/images/banners/total-banner.gif" style="max-width: 100%; " preload="none" controls playsinline webkit-playsinline>
                        <source type="video/youtube" src="https://youtu.be/NH3LUacvaCE" />
                    </video>
                </div>
                <div class="banner-image" style="background-image: url(../Content/work/images/banners/total-banner.gif);"> </div>
            </div>



            <div class="head-title floated">
                <i class="title-icon"><img src="~/Content/work/images/title-icon.png" alt="" /></i>
                <h1>Total</h1>
                <div class="clear"></div>
                <span>CREATING A TRULY HOLISTIC ROAD SAFETY SOLUTION TO COMMUNICATE A SEAMLESS BRAND STORY THROUGH PRODUCT INNOVATION</span>
            </div>
        </div>
        @Html.Partial("_WorkMenu");
    </div>
    <div class="section">
        <div class="head-title floated ">
            <i class="title-icon"><img src="~/Content/work/images/title-icon.png" alt="" /></i>
            <h2>Creative Experience</h2>
        </div>
        <div class="creative-assets-wrapp">
            <div class="assets-carousel total-bg ">
                <div class="slider">
                    <div>
                        <div class="creative-assets">
                            <div class="container">
                                <div class="assets-title">
                                    <h3>Skip ads with kullfi charming viewers <br>to watch her musical story</h3>
                                </div>
                                <div class="total-bk">
                                    <img src="~/Content/work/images/total-insight.jpg" alt="total-insight">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="section white-bg">
        <div class="head-title floated text-color-dark">
            <i class="title-icon"><img src="~/Content/work/images/title-icon.png" alt="" /></i>
            <h2>Results</h2>
        </div>

        <div class="container">
            <div class="quotes-wrapp">
                <div class="quotes">
                    <h3>Coming Soon</h3>
                    <span class="quotes-writer"></span>
                </div>
            </div>
        </div>
    </div>
</main>

