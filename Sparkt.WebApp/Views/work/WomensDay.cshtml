                    <video class="bannerplayer" poster="~/Content/work/images/banners/womens-day-cover.jpg" style="max-width: 100%; " preload="none" controls playsinline webkit-playsinline>
                        <source type="video/youtube" src="https://youtu.be/OcuXIpH4REw" />
                    </video>
                </div>
                <div class="banner-image" style="background-image: url(../Content/work/images/banners/womens-day-cover.jpg);"> </div>
            </div>
            <div class="head-title floated">
                <i class="title-icon"><img src="~/Content/work/images/title-icon.png" alt="" /></i>
                <h1>Women’s Day</h1>
                <div class="clear"></div>
                <span>Igniting a Nayi Soch to break gender stereotypes</span>
            </div>          
        </div>
      
        <div class="awards-wrap">
            <ul>
                <li class="tooltip" title="DIGIXX: Best Use of Video - Gold"><img src="~/Content/work/images/awards/digx-gold.png" class="responsive-img" alt="" /> </li>
                <li class="tooltip" title="ACEF: CSR - Gold"><img src="~/Content/work/images/awards/acef-gold.png" class="responsive-img" alt="" /> </li>
                <li class="tooltip" title="CAMPAIGN INDIA: Social Cause - Supported by Brand - Bronze"><img src="~/Content/work/images/awards/campaign-india-bronz.png" class="responsive-img" alt="" /></li>
            </ul>
        </div>
        @Html.Partial("_WorkMenu")
